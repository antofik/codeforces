<Window x:Class="CodeforcesAddin.SelectContestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Codeforce.ru problem import"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Icon="Resources/logo.png"
        Foreground="#FF333333"
        >
    <Grid>
        <StackPanel>
            <Grid VerticalAlignment="Center" HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*" MinWidth="250" />
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Select contest number" Margin="4" VerticalAlignment="Center" FontWeight="Bold" />
                <ComboBox x:Name="combo" Margin="4" Grid.Column="1" />
                <Button x:Name="cmdImport" Content="Select" Margin="4" Padding="6,4" VerticalAlignment="Center" Grid.Column="2" />
            </Grid>
        </StackPanel>
    </Grid>
</Window>
